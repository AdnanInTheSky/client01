---
// src/pages/articles.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const articles = await getCollection('articles');
---

<Layout title="Articles">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-center mb-12">Latest Articles</h1>
    {articles.length > 0 ? (
      <div class="space-y-12">
        {articles
          .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()) // Sort by newest first
          .map(article => (
            <article key={article.slug} class="bg-white rounded-xl shadow-sm p-6 border border-gray-100">
              <a href={`/articles/${article.slug}`} class="no-underline text-gray-800">
                {article.data.cover_image && (
                  <img
                    src={article.data.cover_image}
                    alt={article.data.title}
                    class="w-full h-48 object-cover mb-4 rounded-t-xl"
                  />
                )}
                <h2 class="text-2xl font-semibold text-blue-600 hover:underline">{article.data.title}</h2>
                <p class="text-gray-600 mt-2">{article.data.excerpt}</p>
                <p class="text-sm text-gray-500 mt-2">
                  {article.data.date.toLocaleDateString()} by {article.data.author || 'Admin'}
                </p>
              </a>
            </article>
          ))}
      </div>
    ) : (
      <p class="text-center text-gray-500">No articles found.</p>
    )}
  </div>
</Layout>